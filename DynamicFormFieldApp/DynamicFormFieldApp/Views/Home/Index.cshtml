@{
    ViewData["Title"] = "Dynamic Form Field";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container mt-5">
    <form>
        <div class="form-group">
            <label for="cityInput">City:</label>
            <input type="text" class="form-control" id="cityInput" name="cityInput" oninput="checkInput()">
        </div>
        <div class="form-group" id="additionalField" style="display: none;">
            <label for="additionalInput">Additional Information:</label>
            <input type="text" class="form-control" id="additionalInput" name="additionalInput">
        </div>
    </form>
</div>

