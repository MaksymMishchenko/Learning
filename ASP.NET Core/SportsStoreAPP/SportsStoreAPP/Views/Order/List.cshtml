@model IEnumerable<Order>

@{
    ViewBag.Title = "Orders";
    Layout = "_AdminLayout";
}

@if (Model.Count() > 0)
{
    <table class="">
        <tr><th>Name</th><th>ZIP</th><th colspan="2">Details</th></tr>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Name</td>
                <td>@o.Zip</td>
                <th>Product</th>
                <th>Quantity</th>
                <td>
                    <form action="MarkShipped" method="post">
                        <input type="hidden" name="orderId" value="@o.OrderId" />
                        <button type="submit" class="btn btn-sm btn-danger">Ship</button>

                    </form>
                </td>
            </tr>
        }

    </table>
}
else
{
    <div>No Unshipped Orders</div>
}