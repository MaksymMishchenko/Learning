@model Person[]

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Areas</title>
</head>
<body>
    <table>
        <tr><th>Name: </th><th>City</th></tr>
        @foreach (Person p in Model)
        {
            <tr><td>@p.Name</td><td>@p.City</td></tr>
        }
    </table>

    <a asp-action="Index" asp-asp-controller="Home" asp-route-area="">Link</a>

</body>
</html>