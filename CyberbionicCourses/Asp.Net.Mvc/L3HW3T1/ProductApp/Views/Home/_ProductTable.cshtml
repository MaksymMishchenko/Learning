@model IEnumerable<Product>
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "ProductTable";
}
<h1>Product Table</h1>

<table border="1">
    <tr>
        <th>Id:</th>
        <th>Name:</th>
        <th>Price:</th>
        <th>Created Date:</th>
    </tr>

    @{
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price.ToString("c")</td>
                <td>@item.CreatedDate</td>
            </tr>

        }
    }
</table>