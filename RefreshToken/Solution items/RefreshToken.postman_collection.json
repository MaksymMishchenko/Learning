							"listen": "test",
							"script": {
								"exec": [
									"// Перевірка, чи є токен у відповіді\r",
									"if (pm.response.code === 200) {\r",
									"    var jsonResponse = pm.response.json();\r",
									"    // Зберігаємо refreshToken в змінну середовища\r",
									"    pm.environment.set(\"JwtToken\", jsonResponse.jwtToken);  // Замість 'token' вкажіть точну назву поля\r",
									"    // Зберігаємо refreshToken в змінну середовища\r",
									"    pm.environment.set(\"RefreshToken\", jsonResponse.refreshToken);  // Замість 'refreshToken' вкажіть точну назву поля\r",
									"} else {\r",
									"    console.error(\"Error fetching token: \", pm.response.status);\r",
									"}"
								],
